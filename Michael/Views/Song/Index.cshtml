@model IEnumerable<Michael.Data.Song>
@{
    ViewBag.Title = "Index";
}

<h3>Index</h3>
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />


<h4><i>List of songs from Off the Wall through This is It</i> </h4>
@Html.ActionLink("Contact us to recommend any changes", "Contact", "Home")


<div class="col-lg-4">
    
    <div>
        <h4>View Songs By Album</h4>
        <a href="/Album/Details/1">Off The Wall </a>|
        <a href="/Album/Details/2">Thriller </a>|
        <a href="/Album/Details/3">Bad </a>|
        <a href="/Album/Details/4">Dangerous </a>|
