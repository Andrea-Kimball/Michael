        <a href="/Album/Details/6">Invincible </a>|
        <a href="/Album/Details/7">This Is It </a>|
        <br />
        @Html.ActionLink("Add a Song", "Create")

    </div>
    <div id="accordion">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h3>Full Discography</h3>

                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body" style="overflow:auto;height: 300px; padding:5px;">





                    <table class="table">
                        <tr>
                            <th>Album</th>
                            <th>Title</th>


                        </tr>
                        @foreach (var song in Model)
                        {
                            <tr>
                                <td>@song.Category.Title</td>
                                <td>@song.Title</td>

                                <td>

                                    @Html.ActionLink("Modify", "Edit", new { id = song.SongId })
                                    @Html.ActionLink("Details", "Details", new { id = song.SongId })
                                    @Html.ActionLink("Delete", "Delete", new { id = song.SongId })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
